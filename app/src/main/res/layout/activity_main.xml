<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:textSize="24sp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_bg"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/btn_ss"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_bg"
        android:text="SCORES APP"
        android:id="@+id/btn_sa"
        android:layout_below="@+id/btn_ss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_bg"
        android:text="LIBRARY APP"
        android:id="@+id/btn_la"
        android:layout_below="@+id/btn_sa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_bg"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btn_bib"
        android:layout_below="@+id/btn_la"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_bg"
        android:text="XYZ READER"
        android:id="@+id/btn_xr"
        android:layout_below="@+id/btn_bib"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/red_bg"
        android:text="CAPSTONE: MY OWN APP"
        android:textColor="#FFFFFF"
        android:id="@+id/btn_moa"
        android:layout_below="@+id/btn_xr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
